[Unit]
Description=Neutron l3 agent
After=neutron-plugin-openvswitch-agent.service

[Service]
ExecStartPre=/usr/bin/sysctl net.ipv4.ip_forward=1
ExecStartPre=/usr/bin/sysctl net.ipv4.conf.default.rp_filter=0
ExecStartPre=/usr/bin/sysctl net.ipv4.conf.all.rp_filter=0
ExecStart=/usr/bin/neutron-l3-agent --config-file=/etc/neutron/neutron.conf --config-file=/etc/neutron/l3_agent.ini
User=root
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
